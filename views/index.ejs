    <button type="submit" class="btn btn-danger position-absolute top-0 end-0">Logout</button>
</form>
  <div class="container">
    <div class="main">
        <!-- <img src="/img/6012764.jpg" alt="" class="w-50 h-50"> -->
      <h1 class = "mt-5">Weather Application</h1>
      <form action="/weather" method="post" class="mt-5 mb-5" id="form-input">
        <div class="input-group input-group-lg">
            <span class="input-group-text" id="inputGroup-sizing-lg">Enter the city</span>
            <input type="text" id="city-input" name="city" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
          </div>
        </form>
    </div>

    <% if (weather) { %>
      <h1>History</h1>
      <% for (let i = 0; i < weather.length; i++) { %> 
        <div id="weather-info" class="bg-info rounded">
          <div>
            <h2>Weather in <%= weather[i].city %></h2>
            <p>Temperature: <%= weather[i].temperature %>Â°C</p>
            <p>Description: <%= weather[i].description %></p>
            <p><img src="<%= weather[i].icon %>" alt="Weather Icon"></p>
          </div>
          <div>
            <h2>Map</h2>
            <div id="map<%=i%>>" style="height: 300px;" class="mb-5" data-lat="<%=weather[i].lat%>" data-lon="<%=weather[i].lon%>" data-len="<%=weather.length%>"></div>
          </div>
        </div>

      <!-- <div>
        <h2>Map</h2>
        <div id="map" style="height: 400px;" class="mb-5"></div>
      </div> -->
      <% } %>
  <% } else if (error) { %>
      <p>Error: <%= error %></p>
  <% } %>

